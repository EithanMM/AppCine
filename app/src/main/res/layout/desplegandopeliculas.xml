<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="6dp">

    <ImageView
        android:id="@+id/ivdibujo"
        android:layout_width="141dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/coco" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/paraelatributo01"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Atributo01"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/paraelatributo02"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="Atributo02"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paraelatributo03"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="Atributo03"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paraelatributo04"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="02:00 p m"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>